<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/main_gray"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/Layout_Profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginBottom="20dp"
                    android:layout_marginHorizontal="80dp"
                    android:layout_marginTop="80dp"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:src="@drawable/icon_default_profile"/>

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="꽃보다청춘님"
                    android:textSize="36sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/ProfEdit_Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="#00FFFFFF"
                    android:text="개인정보 수정"
                    android:textColor="@color/main_gray"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Layout_App_Info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingHorizontal="20dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/logo_now_medicine" />

                <Button
                    android:id="@+id/GoSoundSetting_Btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:background="@color/transparent"
                    android:text="음성 및 소리 설정"
                    android:textAlignment="viewStart"
                    android:textSize="24sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/main_gray" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:background="@color/transparent"
                    android:text="복약 기록 조회하기"
                    android:textAlignment="viewStart"
                    android:textSize="24sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/main_gray" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:background="@color/transparent"
                    android:text="자주 묻는 질문"
                    android:textAlignment="viewStart"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:paddingHorizontal="20dp"
                android:background="@color/white"
                android:id="@+id/layout_setting"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/icon_call_center"/>
                <Button
                    android:id="@+id/Call_Service_Btn"
                    android:layout_marginVertical="20dp"
                    android:textSize="24sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:textAlignment="viewStart"
                    android:text="1:1 문의하기" />

                <View
                    android:background="@color/main_gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <Button
                    android:layout_marginVertical="20dp"
                    android:textSize="24sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:textAlignment="viewStart"
                    android:text="서비스 이용약관" />

                <View
                    android:background="@color/main_gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <Button
                    android:layout_marginVertical="20dp"
                    android:textSize="24sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:textAlignment="viewStart"
                    android:text="개인정보 처리방침" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>