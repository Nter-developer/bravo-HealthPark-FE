<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".presentation.activities.MedRegistrationActivity">

  <LinearLayout
      android:id="@+id/linearLayout_create_alarm_description"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintHorizontal_chainStyle="packed"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="80dp"
      android:orientation="vertical">
    <TextView
        android:text="어떤 약을 드시나요?"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="처방전 사진으로 등록할 수도 수 있어요"/>
  </LinearLayout>

  <LinearLayout
      android:id="@+id/linearLayout_create_alarm_form"
      app:layout_constraintHorizontal_chainStyle="packed"
      app:layout_constraintTop_toBottomOf="@+id/linearLayout_create_alarm_description"
      app:layout_constraintBottom_toBottomOf="@+id/linearLayout_create_alarm_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginBottom="60dp">
    <TextView
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="약 이름"/>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/edittext_input_medicine_name"
        android:background="@drawable/shape_edittext"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
    <TextView
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="일일 복용 횟수"/>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/edittext_input_dose_day"
        android:background="@drawable/shape_edittext"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
    <TextView
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="복용 일수"/>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/edittext_input_daily_dose"
        android:background="@drawable/shape_edittext"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:id="@+id/linearLayout_dose_time"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <Button
          android:id="@+id/button_dose_time_morning"
          android:text="아침"
          android:layout_margin="10dp"
          android:background="@drawable/shape_circle_button"
          android:layout_width="60dp"
          android:layout_height="60dp" />
      <Button
          android:id="@+id/button_dose_time_lunch"
          android:text="점심"
          android:layout_margin="10dp"
          android:background="@drawable/shape_circle_button"
          android:layout_width="60dp"
          android:layout_height="60dp" />
      <Button
          android:id="@+id/button_dose_time_dinner"
          android:text="저녁"
          android:layout_margin="10dp"
          android:background="@drawable/shape_circle_button"
          android:layout_width="60dp"
          android:layout_height="60dp" />
      <Button
          android:id="@+id/button_dose_time_night"
          android:text="자기 전"
          android:layout_margin="10dp"
          android:background="@drawable/shape_circle_button"
          android:layout_width="60dp"
          android:layout_height="60dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout_dose_timing"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <Button
          android:id="@+id/button_dose_timing_before_meal"
          android:text="식전"
          android:layout_margin="20dp"
          android:background="@drawable/shape_circle_button"
          android:layout_width="80dp"
          android:layout_height="80dp" />
      <Button
          android:id="@+id/button_dose_timing_after_meal"
          android:text="식후"
          android:layout_margin="20dp"
          android:background="@drawable/shape_circle_button"
          android:layout_width="80dp"
          android:layout_height="80dp" />
    </LinearLayout>
  </LinearLayout>
  <LinearLayout
      android:id="@+id/linearLayout_create_alarm_button"
      app:layout_constraintTop_toBottomOf="@+id/linearLayout_create_alarm_form"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintHorizontal_chainStyle="packed"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <Button
        android:text="약 등록"
        android:textColor="@color/white"
        android:background="@drawable/shape_button_on"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>